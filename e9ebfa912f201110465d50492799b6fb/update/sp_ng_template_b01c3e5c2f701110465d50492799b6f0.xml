        <template><![CDATA[<div class="movie-modal panel panel-default">

  <div class="panel-heading" style="background:#ffa903;">
  	{{modalC.movie.title}}
  </div>
  
	<div class="panel-body">
    <div style="float:left; width:50%">
      Title: {{modalC.movie.title}}<br>
      Release: {{modalC.movie.release_date}}<br>
      Director(s): {{modalC.movie.directors}}<br>
  		Actor(s): {{modalC.movie.actors}}<br>
			Rating: {{modalC.movie.rating}}<br><br>
    	<div style="height:300px;overflow:scroll;scrollbar-width:none;">{{modalC.movie.plot}}</div>
    </div>
    <div style="float:right;width:225px;height:300px;">
    	<img src="{{modalC.movie.poster}}" style="width:100%;height:100%;"/>
  	</div>
  </div>
  
  <div class="panel-footer text-right">
    <button class="btn" ng-click="c.closeModal()">Close</button>
    <input class="btn btn-primary" type="button" value="add to cart"
            ng-click="c.addToCart(modalC.movie)" />
  </div>

</div>]]></template>
